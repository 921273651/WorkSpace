<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".filestorage"
    android:orientation="vertical">


    <EditText
        android:id="@+id/edit_write"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:cursorVisible="false"
        android:hint="Type something here..."/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">
    <Button
        android:id="@+id/save_inner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:background="#932020"
        android:text="SaveInner"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/save_outer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:background="#932020"
        android:text="LoadInner"
        android:textAllCaps="false"/>
</LinearLayout>

    <EditText
        android:id="@+id/edit_read"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:cursorVisible="false"
        android:hint="Type something here..."/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">
        <Button
            android:id="@+id/load_inner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:background="#932020"
            android:text="SaveInner"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/load_outer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:background="#932020"
            android:text="SaveInner"
            android:textAllCaps="false"/>
    </LinearLayout>


</LinearLayout>