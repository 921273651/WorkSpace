<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/allblack"
    >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:text="1.当前你的年龄为？"
    android:textSize="30sp"
    android:textColor="#5C360E"
   />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFC82B"
            android:text="18-20"
            android:textSize="20sp"
            />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#F7BE2B"
            android:text="21-35"
            android:textSize="20sp"
            />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#F7BE2B"
            android:text="36-45"
            android:textSize="20sp"
            />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#F7BE2B"
            android:text="45以上"
            android:textSize="20sp"
            />
    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="2.你知道的设计师品牌为"
        android:textSize="30sp"
        android:textColor="#5C360E"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#F7BE2B"
        android:text="Alexander Wang"
        android:textSize="20sp"
        />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#F7BE2B"
            android:text="VALENTINO"
            android:textSize="20sp"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#F7BE2B"
            android:text="Elisabetta franchi"
            android:textSize="20sp"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#F7BE2B"
            android:text="Dior"
            android:textSize="20sp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="3.当前你能接受的购置服饰的资金为"
        android:textSize="30sp"
        android:textColor="#5C360E"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#F7BE2B"
            android:text="200-300"
            android:textSize="20sp"
            />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#F7BE2B"
            android:text="500-1000"
            android:textSize="20sp"
            />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#F7BE2B"
            android:text="1000以上"
            android:textSize="20sp"
            />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#F7BE2B"
            android:text="只要自己喜欢就买"
            android:textSize="20sp"
            />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="4.你当前最喜欢的服装风格为"
        android:textSize="30sp"
        android:textColor="#5C360E"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#F7BE2B"
            android:text="时尚优雅风"
            android:textSize="20sp"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#F7BE2B"
            android:text="小众复古风"
            android:textSize="20sp"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#F7BE2B"
            android:text="元气少女风"
            android:textSize="20sp"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#F7BE2B"
            android:text="随时变换风格"
            android:textSize="20sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="5.对当前的服装行业，你有什么建议？"
            android:textColor="#5C360E"
            android:textSize="30sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp" />

        <ImageButton
            android:id="@+id/im1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/sbmit" />
    </LinearLayout>



</LinearLayout>